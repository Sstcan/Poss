<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shishengtao.poss.MainActivity">

    <LinearLayout
        android:id="@+id/linearlayout_1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="6dp"
        android:background="@drawable/backgroud_white"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintRight_toLeftOf="parent"
        >


        <TextView
            android:id="@+id/textview_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Amount"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#000000"
            android:textSize="25sp"
            />

        <EditText
            android:id="@+id/ET_1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="6"
          android:background="@drawable/backgroud_main"
            android:hint="0.00"
            android:layout_marginTop="5dp"/>


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/RL_1"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_1"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">
        <Button
            android:id="@+id/btn_1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="1"
            android:textSize="35sp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/shape_circle"/>
        <Button
            android:id="@+id/btn_2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="2"
            android:textSize="35sp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle"/>
        <Button
            android:id="@+id/btn_3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="31"
            android:textSize="35sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_circle"
            />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RL_2"
        app:layout_constraintTop_toBottomOf="@+id/RL_1"
        android:layout_marginTop="7dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="4"
            android:textSize="35sp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/shape_circle"/>
        <Button
            android:id="@+id/btn_5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="5"
            android:textSize="35sp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle"/>
        <Button
            android:id="@+id/btn_6"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="6"
            android:textSize="35sp"
            android:layout_alignParentRight="true"
           android:background="@drawable/shape_circle"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RL_3"
        app:layout_constraintTop_toBottomOf="@+id/RL_2"
        android:layout_marginTop="7dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="7"
            android:textSize="35sp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/shape_circle"/>
        <Button
            android:id="@+id/btn_8"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="8"
            android:textSize="35sp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle"
            />
        <Button
            android:id="@+id/btn_9"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="9"
            android:textSize="35sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_circle"
            />


    </RelativeLayout>
    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/RL_3"
        android:layout_marginTop="7dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <Button
            android:id="@+id/btn_00"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="00"
            android:textSize="35sp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/shape_circle"/>
        <Button
            android:id="@+id/btn_0"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="0"
            android:textSize="35sp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle"
            />
        <Button
            android:id="@+id/btn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="<"
            android:textSize="35sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_circle"
            />


    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
